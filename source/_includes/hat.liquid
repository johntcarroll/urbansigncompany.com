{% include up_applications_navigation.liquid %}

{% include breadcrumb.liquid %}

{% for node in site.pages %}
  {% if node.url == page.url %}
    <div class="hat__title">
      <h2>{{ node.title }}</h2>
    </div>
  {% endif %}
{% endfor %}

{% for post in site.posts %}
  {% if post.url == page.url %}
    {% if post.folder contains 'applications' %}
      <div class="hat__title">
        <h2>{{ post.title }}</h2>
      </div>
    {% else %}
      <div class="hat__title">
        <h2>{{ post.title }}</h2>
      </div>
      <div class="hat__info-box">
        <div class="hat__client">
          <p>CLIENT</p>
          <a target="_blank" href="{{ post.client.site }}"><h4>{{ post.client.name }}</h4></a>
        </div>
        <div class="hat__design">
          <p>DESIGN</p>
          <a target="_blank" href="{{ post.design.site }}"><h4>{{ post.design.name }}</h4></a>
        </div>
      </div>
    {% endif %}
  {% endif %}
{% endfor %}