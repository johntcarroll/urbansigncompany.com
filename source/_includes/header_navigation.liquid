<ul>{% assign sorted_pages = site.pages | sort:"order" %}
  {% for node in sorted_pages %}
  {% if node.title != null %}
    {% if group != node.group %}
      {% if page.url == node.url %}
        <li><a href="{{ BASE_PATH }}{{node.url}}" class="active">{{node.title}}</a></li>
        {% if node.url != "/contact-form/" %}
          <li class="header__circle"></li>
        {% endif %}
      {% else %}
        <li><a href="{{ BASE_PATH }}{{node.url}}">{{node.title}}</a></li>
        {% if node.url != "/contact-form/" %}
          <li class="header__circle"></li>
        {% endif %}
      {% endif %}
    {% endif %}
  {% endif %}
{% endfor %}</ul>