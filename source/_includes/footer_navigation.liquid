<div class="footer">
<ul>{% assign sorted_pages = site.pages | sort:"order" %}
  {% for node in sorted_pages %}
  {% if node.title != null && node.categories == 'header'%}
    {% if group == null or group == node.group %}
      {% if node.url == "/contact/" %}
         <li><a href="{{ BASE_PATH }}{{node.url}}#1">{{node.title}}</a></li>
         <li><a href="{{ BASE_PATH }}{{node.url}}#2">{{node.title}}</a></li>
      {% else %}
        {% if page.url == node.url %}
        <li><a href="{{ BASE_PATH }}{{node.url}}">{{node.title}}</a></li>
        {% else %}
        <li><a href="{{ BASE_PATH }}{{node.url}}">{{node.title}}</a></li>
        {% endif %}
      {% endif %}
    {% endif %}
  {% endif %}
{% endfor %}</ul>
<div class="footer__logo">
  <a href="https://www.linkedin.com/company/urban-sign" class="footer__logo-main">{{ src | img : "linkedin.svg" }}</a>
  <a href="https://www.linkedin.com/company/urban-sign" class="footer__logo-hover">{{ src | img : "linkedin-hover.svg" }}</a>
</div>
</div>

